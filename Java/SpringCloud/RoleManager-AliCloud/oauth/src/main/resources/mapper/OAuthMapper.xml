<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.rolemanager.oauth.mapper.OAuthMapper">
    <resultMap id="BaseResultMap" type="com.rolemanager.commons.model.users.UserModel">
        <!--@mbg.generated-->
        <!--@Table table_user-->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="avtatar" jdbcType="VARCHAR" property="avtatar"/>
        <result column="name" jdbcType="VARCHAR" property="name"/>
        <result column="age" jdbcType="INTEGER" property="age"/>
        <result column="nickname" jdbcType="VARCHAR" property="nickname"/>
        <result column="cardno" jdbcType="VARCHAR" property="cardno"/>
        <result column="email" jdbcType="VARCHAR" property="email"/>
        <result column="phone" jdbcType="VARCHAR" property="phone"/>
        <result column="createtime" jdbcType="TIMESTAMP" property="createtime"/>
        <result column="updatetime" jdbcType="TIMESTAMP" property="updatetime"/>
        <result column="pwd" jdbcType="VARCHAR" property="pwd"/>
        <result column="salt" jdbcType="VARCHAR" property="salt"/>
        <result column="pwderrortime" jdbcType="VARCHAR" property="pwderrortime"/>
        <result column="status" jdbcType="INTEGER" property="status"/>
        <result column="statusremark" jdbcType="VARCHAR" property="statusremark"/>
        <result column="remark" jdbcType="VARCHAR" property="remark"/>
    </resultMap>
    <sql id="Base_Column_List">
        <!--@mbg.generated-->
        id, avtatar, `name`, age, nickname, cardno, email, phone, createtime, updatetime,
        pwd, salt, pwderrortime, `status`, statusremark, remark
    </sql>
    <select id="selectByPrimaryKey" parameterType="java.lang.Long" resultMap="BaseResultMap">
        <!--@mbg.generated-->
        select
        <include refid="Base_Column_List"/>
        from table_user
        where id = #{id,jdbcType=BIGINT}
    </select>


    <select id="getUserByName" resultMap="BaseResultMap">
        select * from table_user where nickname = #{nickname,jdbcType=VARCHAR};
    </select>

    <resultMap id="PermissionMap" type="com.rolemanager.commons.model.users.PermissionModel">
        <!--@mbg.generated-->
        <!--@Table table_user-->
        <id column="id" jdbcType="BIGINT" property="id"/>
        <result column="parent_id" jdbcType="BIGINT" property="parentId"/>
        <result column="permission_name" jdbcType="VARCHAR" property="permissionName"/>
        <result column="permission_code" jdbcType="VARCHAR" property="permissionCode"/>
    </resultMap>
    <select id="getPermissionsByUserId" resultMap="PermissionMap">
        select *
        from table_permission where id in (
        select permission_id
        from table_role_permission where role_id in
        (select id
        from table_role where id in (
        select distinct role_id
        from table_user_role
        where user_id = #{userId,jdbcType=BIGINT}
        union
        select distinct B.role_id
        from (
        select group_id
        from table_user_group
        where user_id = #{userId,jdbcType=BIGINT}) A left join table_group_role B on A.group_id=B.group_id)))
    </select>
</mapper>
